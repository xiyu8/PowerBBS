<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="1dp"
    tools:context=".home.ThemeDetailActivity"
    android:background="#dddddd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#f5fdff">

            <TextView
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TextView" />

            <TextView
                android:layout_marginBottom="3dp"
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_below="@+id/comment_username"
                android:layout_alignLeft="@+id/comment_username"
                android:layout_alignStart="@+id/comment_username"
                android:layout_marginTop="11dp"
                android:layout_alignRight="@+id/comment_time"
                android:layout_alignEnd="@+id/comment_time" />

            <TextView
                android:id="@+id/comment_time"
                android:textSize="12sp"
                android:textColor="#888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="TextView" />

        </RelativeLayout>
        <ImageView
            android:id="@+id/comment_pic"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#f5fdff"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>