<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_communication_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    tools:context="com.example.powerbbs.home.CommunicationMainAct"
    android:baselineAligned="false">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="#dedede"
        android:layout_height="match_parent">
        <!--Pager-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#000000"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/rfab_group_sample_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dedede"
                android:layout_gravity="center_vertical"
                >
                <android.support.v4.view.PagerTabStrip
                    android:id="@+id/rfab_group_sample_pts"
                    android:background="#1397c2"
                    android:layout_width="match_parent"
                    android:divider="@null"
                    android:dividerHeight = "0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="top"
                    />
            </android.support.v4.view.ViewPager>
        </LinearLayout>


        <!--FAB-->
        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/separate_rfab_sample_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:padding="8dp"
            rfab:rfab_size="normal"
            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_color_normal="#1397c2"
            rfab:rfab_color_pressed="#b0120a"
            rfab:rfab_shadow_radius="10dp"
            rfab:rfab_shadow_color="#666"
            rfab:rfab_shadow_dx="2dp"
            rfab:rfab_shadow_dy="3dp"
            android:layout_gravity="bottom|right"
            />
    </FrameLayout>
</LinearLayout>
